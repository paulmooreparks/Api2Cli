{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "a2c --version (safe)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/a2c/bin/Debug/net8.0/a2c.dll",
            "args": ["--version"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        },
        {
            "name": "a2c timings smoke",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/a2c/bin/Debug/net8.0/a2c.dll",
            "args": ["--version"],
            "env": { "A2C_TIMINGS": "1" },
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        },
        {
            "name": "a2c config+version (safe)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/a2c/bin/Debug/net8.0/a2c.dll",
            "args": ["--config", "${env:USERPROFILE}\\.a2c", "--version"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        }
    ]
}
