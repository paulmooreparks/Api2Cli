{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"build",
				"Api2Cli.sln"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$msCompile"
			],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "clean",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"clean",
				"Api2Cli.sln"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "rebuild",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"build",
				"Api2Cli.sln",
				"--no-incremental"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "restore",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"restore",
				"Api2Cli.sln"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "test",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"test",
				"Api2Cli.sln"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "run a2c",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"run",
				"--project",
				"a2c"
			],
			"group": "test",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "run a2c --version",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"run",
				"--project",
				"a2c",
				"--",
				"--version"
			],
			"group": "test",
			"problemMatcher": ["$msCompile"],
			"presentation": {"reveal": "silent"}
		},
		{
			"label": "run a2c --version timings",
			"command": "dotnet",
			"type": "shell",
			"options": {"env": {"A2C_TIMINGS": "1"}},
			"args": [
				"run",
				"--project",
				"a2c",
				"--",
				"--version"
			],
			"group": "test",
			"problemMatcher": ["$msCompile"],
			"presentation": {"reveal": "silent"}
		}
	]
}
